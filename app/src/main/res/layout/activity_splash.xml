<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:circle="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/adview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.test.circleProgressView
            android:id="@+id/time_progress"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            circle:circleColor="#D1D1D1"
            circle:text="跳转"
            circle:circleProgressColor="@color/textcolor_red"
            circle:textColor="@color/textcolor_black"
            circle:textIsDisplayable="false"
            circle:roundWidth="2dip"
            circle:textSize="12sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/zuodao"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:src="@mipmap/biz_about_logo"/>

</LinearLayout>